@model LibraryWebProject.Models.AuthorModel
@{
    ViewData["Title"] = "AuthorEdit";
}

<form asp-action="AuthorEdit" style="background-color: gray; border-radius: 20px;">

    <h3 class="text-center" style="">Author Edit</h3>
    
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="AuthorID">

    <div class="mx-5" style="padding: 80px;">
        <div class="form-group" >
            <label asp-for="AuthorName" class="text-white"></label>
            <input type="text" asp-for="AuthorName" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="AuthorSurname" class="text-white"></label>
            <input type="text" asp-for="AuthorSurname" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="AuthorBirthDate" class="text-white"></label>
            <input type="text" asp-for="AuthorBirthDate" class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="AuthorDeathDate" class="text-white"></label>
            <input type="text" asp-for="AuthorDeathDate" class="form-control" placeholder="Write - if not">
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
